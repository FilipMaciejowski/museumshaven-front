---
const baseUrl = Astro.url.origin;
---

<form class="form__container" id="contactForm">
  <div class="nameInput__wrapper">
    <label class="nameInput__label" for="name">Name:</label>
    <input type="text" id="name" name="name" minlength="2" required />
  </div>
  <div class="emailInput__wrapper">
    <label class="email__label" for="email">Email:</label>
    <input type="email" id="email" name="email" required />
  </div>
  <div class="textarea__wrapper">
    <label class="textarea__label" for="content">Content:</label>
    <textarea
      id="content"
      name="content"
      rows="4"
      cols="50"
      minlength="2"
      required></textarea>
  </div>

  <input class="submit__btn" type="submit" value="Send" />
</form>

<script define:vars={{ baseUrl }}>
  const handleSubmit = async (e) => {
    e.preventDefault();

    const formData = new FormData(e.target);

    const name = formData.get("name");
    const email = formData.get("email");
    const content = formData.get("content");

    try {
      const response = await fetch(
        `${baseUrl}/.netlify/functions/send-contact-email`,
        {
          method: "POST",
          body: JSON.stringify({
            name,
            email,
            content,
          }),
        }
      );
    } catch (err) {
      console.log(err);
    }
  };

  const contactForm = document.getElementById("contactForm");

  contactForm.addEventListener("submit", (e) => handleSubmit(e));
</script>

<style>
  .form__container {
    margin: 2rem 0;
  }

  .nameInput__wrapper,
  .emailInput__wrapper,
  .textarea__wrapper {
    display: flex;
    flex-direction: column;
    margin-top: 1rem;
  }

  .nameInput__label,
  .email__label,
  .textarea__label {
    font-family: "Lora";
    font-weight: 200;
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
  }

  input[type="text"],
  input[type="email"] {
    padding: 0.75rem;
    background-color: var(--lightBrown);
    border-radius: 15px;
    border: none;
  }

  input[type="text"]:focus,
  input[type="email"]:focus {
    outline: 2px solid var(--brown);
  }

  textarea {
    padding: 0.75rem;
    background-color: var(--lightBrown);
    border-radius: 15px;
    border: none;
    min-height: 10rem;
    font-family: "Lora";
  }

  textarea:focus {
    outline: 2px solid var(--brown);
  }
  input {
    font-family: "Lora";
  }

  input.submit__btn {
    margin-top: 1rem;
  }
</style>
