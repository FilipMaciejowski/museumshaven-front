---
import "../styles/variables.css";
---

<div id="hamburger" class="hamburger__container">
  <span class="line__1"></span>
  <span class="line__2"></span>
  <span class="line__3"></span>
</div>

<style>
  .hamburger__container {
    position: relative;
    margin-right: 1rem;
    padding: 0.65rem;
    hight: 1rem;
    width: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 5;
  }

  .hamburger__container span {
    display: block;
    position: absolute;
    border-radius: 5px;
    width: 100%;
    height: 4px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: black;
  }

  .hamburger__container .line__1 {
    transform: translate(-50%, -10px);
  }
  .hamburger__container .line__3 {
    transform: translate(-50%, 6px);
  }

  .openmenu .line__1 {
    transform: translate(-50%, -50%) rotate(-45deg);
  }
  .openmenu .line__2 {
    transform: translate(-50%, -50%) rotate(45deg);
  }
  .openmenu .line__3 {
    width: 0;
  }

  @media (min-width: 1101px) {
    .hamburger__container {
      display: none;
    }
  }
</style>
