---
import Layout from "../../layouts/Layout.astro";

import fetchApi from "../../libs/strapi";

let articles;
try {
  articles = await fetchApi("blog-posts", true);
} catch (e) {
  console.log(e);
}
---

<Layout title="blogg">
  <div class="content__container">
    <img class="Blog__img" src="/Blogg.svg" />
    <div class="blog__container">
      <h1 class="header__main">Blogg</h1>
      <ul class="article__list">
        {
          articles.data.map((article) => (
            <a
              class="list__element_link"
              href={`/blogg/${article.attributes.slug}/`}
            >
              <li class="list__element">
                <div class="link__element_text">
                  <p class="blog__element_title">{article.attributes.title}</p>
                  <p class="blog__element_date">11 Dec, 2023</p>
                </div>
                <img class="arrow__img" src="/Arrow_blog.svg" />
              </li>
            </a>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>

<style>
  .content__container {
    margin: 4rem auto;
    min-height: 67.5vh;
    display: flex;
    justify-content: center;
    align-items: start;
  }
  div.blog__container {
    width: 50vw;
    margin-left: 2rem;
  }

  h1.header__main {
    margin: 0;
    font-family: "Lora";
    font-size: 3rem;
    font-weight: 600;
  }

  ul.article__list {
    text-decoration: none;
    padding: 0;
    margin-top: 2rem;
  }

  li.list__element {
    list-style: none;
    padding: 0.5rem 1.5rem;
    background-color: var(--light_brown);
    margin: 1rem 0;
    width: 75%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 17.5px;
    transition: all 0.25s ease-in-out;
  }
  li.list__element:hover {
    background-color: var(--brown);
    transition: all 0.25s ease-in-out;
  }
  a.list__element_link {
    color: black;
    text-decoration: none;
    dispaly: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
  }

  p.blog__element_title {
    margin: 0;
    width: 100%;
    font-family: "Lora";
    font-size: 1rem;
    font-weight: 500;
  }
  p.blog__element_date {
    margin: 0;
    width: 100%;
    font-family: "Lora";
    font-size: 0.75rem;
    font-weight: 300;
    color: var(--grey_dark);
  }

  img.arrow__img {
    width: 2rem;
  }

  @media (max-width: 1100px) {
    .Blog__img {
      width: 12.5rem;
    }
    h1.header__main {
      font-size: 2rem;
    }
    p.description__text {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 550px) {
    .content__container {
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    div.blog__container {
      margin: 2rem 0 0 0;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: start;
      width: 100%;
    }

    h1.header__main {
      text-align: center;
    }
    

    ul.article__list {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    li.list__element {
      width: 85%;
    }
  }
</style>
<script>
  const body = document.body;
  const hamburger = document.getElementById("hamburger");
  const navMobile = document.getElementById("nav__container-mobile");

  hamburger.addEventListener("click", () => {
    hamburger.classList.toggle("openmenu");
    navMobile.classList.toggle("visible");
    body.classList.toggle("stop_scrolling");
  });
</script>