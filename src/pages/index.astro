---
import { Image } from "astro:assets";
import { Debug } from "astro:components";
import Layout from "../layouts/Layout.astro";
import MainLogo from "../components/MainLogo.astro";
import "../styles/fonts.css";
import fetchApi from "../libs/strapi";

let homeContent;
try {
  homeContent = await fetchApi("home");
  debugger;
} catch (e) {
  console.log(e);
}
---

<Layout>
  <div class="mainContent__wrapper">
    <MainLogo />
    <div class="mainContent">
      <p class="mainContent__title">{homeContent.title}</p>
      <p class="mainContent__undertext">Mat - Drikke - Hygge</p>
      <p class="mainContent__description">{homeContent.description}</p>
      <nav class="mainContent__navigation">
        <ul class="mainContent__navList">
          <li class="mainContent__navItem">
            <img src="../../public/Kitchen.svg" />
            <a class="mainContent__navLink" href="/kjokennet">Kj√∏kkenet</a>
          </li>
          <li class="mainContent__navItem">
            <img src="../../public/Garden.svg" />
            <a class="mainContent__navLink" href="/hagen">Hagen</a>
          </li>
          <li class="mainContent__navItem">
            <img src="../../public/Museum.svg" />
            <a class="mainContent__navLink" href="/museet">Museet</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</Layout>
